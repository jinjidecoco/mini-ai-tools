/* Borders */
.rounded-2xl {
  border-radius: 16px;
}

.rounded-xl {
  border-radius: 12px;
}

.rounded-lg {
  border-radius: 8px;
}

.rounded-full {
  border-radius: 9999px;
}

.border-2 {
  border-width: 2px;
}

.border-green-500 {
  border-color: #10B981;
}

.border-t-transparent {
  border-top-color: transparent;
}

/* Utilities */
.shadow-sm {
  box-shadow: 0 1px 2px 0 rgba(0, 0, 0, 0.05);
}

.whitespace-nowrap {
  white-space: nowrap;
}

.whitespace-pre-wrap {
  white-space: pre-wrap;
}

.truncate {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.line-clamp-2 {
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.block {
  display: block;
}

.inline-block {
  display: inline-block;
}

.opacity-40 {
  opacity: 0.4;
}

/* Animations */
@keyframes spin {
  from {
    transform: rotate(0deg);
  }
  to {
    transform: rotate(360deg);
  }
}

.animate-spin {
  animation: spin 1s linear infinite;
}

/* Custom Styles */
textarea {
  width: 100%;
  box-sizing: border-box;
}

button {
  font-size: 16px;
  line-height: 1.5;
  border: none;
}

button[disabled] {
  opacity: 0.7;
  background-color: #E5E7EB !important;
  color: #6B7280 !important;
}