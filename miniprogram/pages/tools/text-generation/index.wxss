.pb-20 {
  padding-bottom: 80px;
}

.mb-6 {
  margin-bottom: 24px;
}

.mb-4 {
  margin-bottom: 16px;
}

.mb-2 {
  margin-bottom: 8px;
}

.mb-1 {
  margin-bottom: 4px;
}

.mt-4 {
  margin-top: 16px;
}

.mt-1 {
  margin-top: 4px;
}

.mr-2 {
  margin-right: 8px;
}

.ml-3 {
  margin-left: 12px;
}

.space-y-3 > view:not(:first-child) {
  margin-top: 12px;
}

.space-x-2 > view:not(:first-child) {
