/**index.wxss**/
page {
  background-color: #F9FAFB;
  height: 100%;
  font-size: 16px;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
  line-height: 1.6;
  --primary-color: #3B82F6;
  --secondary-color: #10B981;
  --accent-color: #8B5CF6;
  --text-primary: #111827;
  --text-secondary: #6B7280;
  --bg-page: #F9FAFB;
  --card-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
}

.container {
  padding: 20rpx;
  height: 100%;
  display: flex;
  flex-direction: column;
}

.header {
  padding: 20rpx 0;
  margin-bottom: 30rpx;
}

.title {
  font-size: 36rpx;
  font-weight: 600;
  color: var(--text-primary);
}

.subtitle {
  font-size: 28rpx;
  color: var(--text-secondary);
  margin-top: 10rpx;
}

.input-section {
  background-color: white;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: var(--card-shadow);
  margin-bottom: 30rpx;
}

.prompt-label {
  font-size: 28rpx;
  font-weight: 500;
  color: var(--text-primary);
  margin-bottom: 10rpx;
}

.prompt-textarea {
  width: 100%;
  height: 200rpx;
  padding: 20rpx;
  box-sizing: border-box;
  border: 1px solid #E5E7EB;
  border-radius: 8rpx;
  font-size: 28rpx;
  margin-bottom: 20rpx;
}

.format-section {
  margin: 20rpx 0;
}

.format-label {
  font-size: 28rpx;
  font-weight: 500;
  color: var(--text-primary);
  margin-bottom: 10rpx;
}

.format-options {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  margin-top: 10rpx;
}

.format-option {
  flex: 1;
  min-width: 140rpx;
  padding: 16rpx;
  background-color: #EFF6FF;
  border-radius: 8rpx;
  text-align: center;
  font-size: 26rpx;
  font-weight: 500;
  color: var(--primary-color);
}

.format-option.selected {
  background-color: var(--primary-color);
  color: white;
}

.tone-section {
  margin: 20rpx 0;
}

.tone-label {
  font-size: 28rpx;
  font-weight: 500;
  color: var(--text-primary);
  margin-bottom: 10rpx;
}

.tone-options {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  margin-top: 10rpx;
}

.tone-option {
  flex: 1;
  min-width: 140rpx;
  padding: 16rpx;
  background-color: #EFF6FF;
  border-radius: 8rpx;
  text-align: center;
  font-size: 26rpx;
  font-weight: 500;
  color: var(--primary-color);
}

.tone-option.selected {
  background-color: var(--primary-color);
  color: white;
}

.length-section {
  margin: 20rpx 0;
}

.length-label {
  font-size: 28rpx;
  font-weight: 500;
  color: var(--text-primary);
  margin-bottom: 10rpx;
}

.length-slider {
  margin: 20rpx 0;
}

.length-value {
  text-align: center;
  font-size: 24rpx;
  color: var(--text-secondary);
}

.generate-button {
  background-color: var(--primary-color);
  color: white;
  border-radius: 8rpx;
  padding: 20rpx 40rpx;
  text-align: center;
  font-weight: 500;
  margin: 20rpx 0;
}

.result-section {
  background-color: white;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: var(--card-shadow);
  flex: 1;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

.result-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.result-title {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-primary);
}

.action-buttons {
  display: flex;
  gap: 16rpx;
}

.copy-button, .share-button, .save-button {
  font-size: 24rpx;
  color: var(--primary-color);
  padding: 8rpx 16rpx;
  background-color: #EFF6FF;
  border-radius: 6rpx;
}

.result-content {
  flex: 1;
  overflow-y: auto;
  padding: 20rpx;
  background-color: #F9FAFB;
  border-radius: 8rpx;
  font-size: 28rpx;
  line-height: 1.6;
  color: var(--text-primary);
}

.regenerate-button {
  background-color: #EFF6FF;
  color: var(--primary-color);
  border-radius: 8rpx;
  padding: 16rpx 40rpx;
  text-align: center;
  font-weight: 500;
  margin-top: 20rpx;
}

.loading {
  text-align: center;
  padding: 40rpx 0;
  color: var(--text-secondary);
}

.error {
  color: #EF4444;
  padding: 20rpx;
  background-color: #FEF2F2;
  border-radius: 8rpx;
  margin-top: 20rpx;
}

/* Saved templates section */
.saved-templates {
  margin-top: 20rpx;
}

.saved-templates-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.saved-templates-title {
  font-size: 28rpx;
  font-weight: 500;
  color: var(--text-primary);
}

.templates-grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(200rpx, 1fr));
  gap: 16rpx;
}

.template-item {
  background-color: #F3F4F6;
  border-radius: 8rpx;
  padding: 16rpx;
  font-size: 24rpx;
  color: var(--text-primary);
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.template-title {
  font-weight: 500;
}

.template-description {
  color: var(--text-secondary);
  font-size: 22rpx;
}

/* Utility classes */
.text-primary {
  color: var(--text-primary);
}

.text-secondary {
  color: var(--text-secondary);
}

.bg-primary {
  background-color: var(--primary-color);
}

.bg-secondary {
  background-color: var(--secondary-color);
}

.bg-accent {
  background-color: var(--accent-color);
}

.bg-page {
  background-color: var(--bg-page);
}

.shadow-card {
  box-shadow: var(--card-shadow);
}

/* Fix for scrollbar */
::-webkit-scrollbar {
  display: none;
}

/* Animation for active state */
.scale-on-active:active {
  transform: scale(0.98);
}

/* Text styles */
.text-lg {
  font-size: 18px;
}

.text-sm {
  font-size: 14px;
}

.text-xs {
  font-size: 12px;
}

.text-xxs {
  font-size: 10px;
}

.font-semibold {
  font-weight: 600;
}

.font-medium {
  font-weight: 500;
}

.text-red-500 {
  color: #EF4444;
}

/* Background colors */
.bg-white {
  background-color: #FFFFFF;
}

.bg-gray-50 {
  background-color: #F9FAFB;
}

.bg-gray-200 {
  background-color: #E5E7EB;
}

.bg-green-50 {
  background-color: #ECFDF5;
}

.bg-green-500 {
  background-color: #10B981;
}

