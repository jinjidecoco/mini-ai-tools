/* Layout */
.flex {
  display: flex;
}

.flex-1 {
  flex: 1;
}

.flex-col {
  flex-direction: column;
}

.items-center {
  align-items: center;
}

.justify-center {
  justify-content: center;
}

.justify-between {
  justify-content: space-between;
}

.self-center {
  align-self: center;
}

.relative {
  position: relative;
}

.absolute {
  position: absolute;
}

.top-2 {
  top: 8px;
}

.right-2 {
  right: 8px;
}

.min-h-screen {
  min-height: 100vh;
}

.w-full {
  width: 100%;
}

.w-8 {
  width: 32px;
}

.w-6 {
  width: 24px;
}

.w-5 {
  width: 20px;
}

.w-4 {
  width: 16px;
}

.w-32 {
  width: 128px;
}

.h-32 {
  height: 128px;
}

.h-8 {
  height: 32px;
}

.h-6 {
  height: 24px;
}

.h-5 {
  height: 20px;
}

.h-4 {
  height: 16px;
}

