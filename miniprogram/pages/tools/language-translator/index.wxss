/* language-translator/index.wxss */
.translator-container {
  padding: 0 30rpx 40rpx;
}

.nav-bar {
  position: sticky;
  top: 0;
  background-color: #ffffff;
  z-index: 100;
  padding: 20rpx 0;
  display: flex;
  align-items: center;
}

.back-btn {
  padding: 16rpx;
  margin-right: 20rpx;
}

.back-btn image {
  width: 40rpx;
  height: 40rpx;
}

.nav-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
}

.language-selection {
  margin-top: 30rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  background: #f8f9fa;
  border-radius: 16rpx;
  padding: 20rpx 30rpx;
}

.language-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
}

.language-label {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 10rpx;
}

.language-picker {
  width: 100%;
  text-align: center;
}

.language-value {
  font-size: 34rpx;
  font-weight: 500;
  color: #333;
}

.switch-btn {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background: #fff;
  border-radius: 50%;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.switch-btn image {
  width: 36rpx;
  height: 36rpx;
}

.translator-form {
  margin-top: 30rpx;
}

.input-area {
  position: relative;
  border-radius: 16rpx;
  background: #f8f9fa;
  padding: 20rpx;
  margin-bottom: 30rpx;
}

.textarea-wrapper {
  position: relative;
  min-height: 180rpx;
}

.input-textarea {
  width: 100%;
  min-height: 180rpx;
  font-size: 32rpx;
  color: #333;
  line-height: 1.6;
}

.placeholder-text {
  color: #999;
}

.input-tools {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 10rpx;
}

.char-count {
  font-size: 24rpx;
  color: #999;
}

.clear-btn {
  padding: 10rpx;
}

.clear-btn image {
  width: 36rpx;
  height: 36rpx;
}

.common-phrases {
  margin: 20rpx 0;
}

.phrase-title {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 20rpx;
}

.phrase-list {
  display: flex;
  flex-wrap: wrap;
  margin: 0 -10rpx;
}

.phrase-item {
  background: #eef5ff;
  padding: 16rpx 24rpx;
  border-radius: 30rpx;
  font-size: 26rpx;
  color: #4080ff;
  margin: 10rpx;
  max-width: calc(50% - 20rpx);
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.translate-btn {
  width: 100%;
  height: 88rpx;
  background: linear-gradient(135deg, #4080ff, #326ceb);
  border-radius: 44rpx;
  color: #fff;
  font-size: 32rpx;
  font-weight: 500;
  margin: 30rpx 0;
  display: flex;
  align-items: center;
  justify-content: center;
}

.translate-btn.loading {
  opacity: 0.8;
}

.loading-icon {
  width: 36rpx;
  height: 36rpx;
  margin-right: 12rpx;
  animation: rotate 1s linear infinite;
}

@keyframes rotate {
  from {
    transform: rotate(0deg);
  }
  to {
    transform: rotate(360deg);
  }
}

.result-area {
  border-radius: 16rpx;
  background: #f8f9fa;
  padding: 20rpx;
  margin-top: 30rpx;
}

.result-content {
  min-height: 100rpx;
  font-size: 32rpx;
  color: #333;
  line-height: 1.6;
  margin-bottom: 20rpx;
}

.no-result {
  color: #999;
  font-size: 28rpx;
  text-align: center;
  padding: 30rpx 0;
}

.result-tools {
  display: flex;
  justify-content: flex-end;
  border-top: 1px solid #eee;
  padding-top: 20rpx;
}

.tool-btn {
  display: flex;
  align-items: center;
  padding: 10rpx 20rpx;
  margin-left: 20rpx;
}

.tool-btn image {
  width: 36rpx;
  height: 36rpx;
  margin-right: 8rpx;
}

.tool-text {
  font-size: 28rpx;
  color: #4080ff;
}

.translation-time {
  font-size: 24rpx;
  color: #999;
  text-align: right;
  margin-top: 10rpx;
}

.history-section {
  margin-top: 60rpx;
}

.history-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.history-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.clear-history {
  font-size: 28rpx;
  color: #999;
}

.history-list {
  margin-top: 20rpx;
}

.history-item {
  background: #fff;
  border-radius: 16rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.history-languages {
  display: flex;
  align-items: center;
  margin-bottom: 10rpx;
}

.history-language {
  font-size: 24rpx;
  color: #666;
}

.history-arrow {
  margin: 0 10rpx;
  color: #ccc;
}

.history-text {
  font-size: 28rpx;
  color: #333;
  margin: 10rpx 0;
  word-break: break-all;
}

.history-translated {
  font-size: 28rpx;
  color: #333;
  margin: 10rpx 0;
  word-break: break-all;
  background: #f1f8ff;
  padding: 16rpx;
  border-radius: 8rpx;
}

.history-time {
  font-size: 24rpx;
  color: #999;
  text-align: right;
}