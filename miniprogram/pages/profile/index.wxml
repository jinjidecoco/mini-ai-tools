<!--profile/index.wxml-->
<view class="page-container">
  <!-- 用户资料头部 -->
  <view class="profile-header">
    <view class="avatar-container">
      <image class="avatar" src="../../assets/icons/logo.svg" mode="aspectFill"></image>
    </view>
    <text class="username">用户名称</text>
    <view class="user-info">
      <text>普通用户</text>
      <view class="vip-badge" bindtap="upgradeToPremium">
        <image class="vip-icon" src="../../assets/icons/vip-badge.svg" mode="aspectFit"></image>
        <text>升级VIP</text>
      </view>
    </view>
  </view>

  <!-- 使用统计 -->
  <view class="user-stats">
    <view class="stat-item">
      <text class="stat-value">25</text>
      <text class="stat-label">已使用工具</text>
    </view>
    <view class="stat-item">
      <text class="stat-value">8</text>
      <text class="stat-label">收藏工具</text>
    </view>
    <view class="stat-item">
      <text class="stat-value">128</text>
      <text class="stat-label">使用次数</text>
    </view>
  </view>

  <!-- 工具菜单 -->
  <view class="menu-section">
    <view class="section-title">工具与历史</view>
    <view class="menu-item" bindtap="navigateTo" data-url="/pages/history/index">
      <image class="menu-icon" src="../../assets/icons/history.svg" mode="aspectFit"></image>
      <text class="menu-text">使用历史</text>
      <image class="menu-arrow" src="../../assets/icons/arrow-right.svg" mode="aspectFit"></image>
    </view>
    <view class="menu-item" bindtap="navigateTo" data-url="/pages/favorites/index">
      <image class="menu-icon" src="../../assets/icons/favorite.svg" mode="aspectFit"></image>
      <text class="menu-text">我的收藏</text>
      <image class="menu-arrow" src="../../assets/icons/arrow-right.svg" mode="aspectFit"></image>
    </view>
  </view>

  <!-- 设置菜单 -->
  <view class="menu-section">
    <view class="section-title">设置与支持</view>
    <view class="menu-item" bindtap="navigateTo" data-url="/pages/settings/index">
      <image class="menu-icon" src="../../assets/icons/settings.svg" mode="aspectFit"></image>
      <text class="menu-text">设置</text>
      <image class="menu-arrow" src="../../assets/icons/arrow-right.svg" mode="aspectFit"></image>
    </view>
    <view class="menu-item" bindtap="navigateTo" data-url="/pages/help/index">
      <image class="menu-icon" src="../../assets/icons/help.svg" mode="aspectFit"></image>
      <text class="menu-text">帮助与支持</text>
      <image class="menu-arrow" src="../../assets/icons/arrow-right.svg" mode="aspectFit"></image>
    </view>
    <view class="menu-item" bindtap="navigateTo" data-url="/pages/feedback/index">
      <image class="menu-icon" src="../../assets/icons/feedback.svg" mode="aspectFit"></image>
      <text class="menu-text">意见反馈</text>
      <text class="menu-badge" wx:if="{{hasFeedbackResponse}}">新</text>
      <image class="menu-arrow" src="../../assets/icons/arrow-right.svg" mode="aspectFit"></image>
    </view>
    <view class="menu-item" bindtap="navigateTo" data-url="/pages/about/index">
      <image class="menu-icon" src="../../assets/icons/about.svg" mode="aspectFit"></image>
      <text class="menu-text">关于我们</text>
      <image class="menu-arrow" src="../../assets/icons/arrow-right.svg" mode="aspectFit"></image>
    </view>
  </view>

  <!-- 底部区域 -->
  <view class="bottom-section">
    <view class="logout-button" bindtap="logout">退出登录</view>
    <view class="app-version">版本 1.0.0</view>
  </view>
</view>