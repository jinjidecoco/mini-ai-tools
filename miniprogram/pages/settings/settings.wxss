/**settings.wxss**/
page {
  background-color: #F9FAFB;
  height: 100%;
  font-size: 16px;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
  line-height: 1.6;
}

.bg-page {
  background-color: #F9FAFB;
}

.min-h-screen {
  min-height: 100vh;
}

.px-4 {
  padding-left: 32rpx;
  padding-right: 32rpx;
}

.py-6 {
  padding-top: 48rpx;
  padding-bottom: 48rpx;
}

.p-4 {
  padding: 32rpx;
}

.pb-20 {
  padding-bottom: 160rpx;
}

.mb-2 {
  margin-bottom: 16rpx;
}

.mb-6 {
  margin-bottom: 48rpx;
}

.mr-2 {
  margin-right: 16rpx;
}

.flex {
  display: flex;
}

.flex-1 {
  flex: 1 1 0%;
}

.flex-col {
  flex-direction: column;
}

.items-center {
  align-items: center;
}

.justify-between {
  justify-content: space-between;
}

.w-4 {
  width: 32rpx;
}

.w-5 {
  width: 40rpx;
}

.w-8 {
  width: 64rpx;
}

.h-4 {
  height: 32rpx;
}

.h-5 {
  height: 40rpx;
}

.h-8 {
  height: 64rpx;
}

.rounded-full {
  border-radius: 9999rpx;
}

.rounded-2xl {
  border-radius: 32rpx;
}

.bg-white {
  background-color: #FFFFFF;
}

.shadow-sm {
  box-shadow: 0 1rpx 2rpx 0 rgba(0, 0, 0, 0.05);
}

.shadow-card {
  box-shadow: 0 8rpx 12rpx -2rpx rgba(0, 0, 0, 0.1), 0 4rpx 8rpx -2rpx rgba(0, 0, 0, 0.06);
}

.text-lg {
  font-size: 36rpx;
}

.font-semibold {
  font-weight: 600;
}

.text-primary {
  color: #111827;
}

.text-secondary {
  color: #6B7280;
}

.text-red-500 {
  color: #EF4444;
}

.text-sm {
  font-size: 28rpx;
}

.font-medium {
  font-weight: 500;
}

.text-xs {
  font-size: 24rpx;
}

.overflow-hidden {
  overflow: hidden;
}

.border-b {
  border-bottom-width: 2rpx;
}

.border-gray-100 {
  border-color: rgba(243, 244, 246, 1);
}

.last-child-no-border:last-child {
  border-bottom-width: 0;
}

.opacity-40 {
  opacity: 0.4;
}