/**categories.wxss**/
page {
  background-color: #F9FAFB;
  height: 100%;
  font-size: 16px;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
  line-height: 1.6;
  color: #111827;
}

/* Layout */
.flex {
  display: flex;
}

.flex-col {
  flex-direction: column;
}

.items-center {
  align-items: center;
}

.justify-center {
  justify-content: center;
}

.justify-between {
  justify-content: space-between;
}

.self-center {
  align-self: center;
}

/* Width/Height/Sizing */
.w-quarter {
  width: 25%;
}

.w-three-quarter {
  width: 75%;
}

.w-4 {
  width: 32rpx;
}

.w-5 {
  width: 40rpx;
}

.w-6 {
  width: 48rpx;
}

.w-8 {
  width: 64rpx;
}

.w-10 {
  width: 80rpx;
}

.w-20 {
  width: 160rpx;
}

.w-full {
  width: 100%;
}

.h-4 {
  height: 32rpx;
}

.h-5 {
  height: 40rpx;
}

.h-6 {
  height: 48rpx;
}

.h-8 {
  height: 64rpx;
}

.h-10 {
  height: 80rpx;
}

.h-20 {
  height: 160rpx;
}

.h-screen {
  height: calc(100vh - 140px);
}

.min-h-screen {
  min-height: 100vh;
}

.flex-1 {
  flex: 1;
}

/* Spacing */
.p-2 {
  padding: 16rpx;
}

.p-4 {
  padding: 32rpx;
}

.px-2 {
  padding-left: 16rpx;
  padding-right: 16rpx;
}

.px-4 {
  padding-left: 32rpx;
  padding-right: 32rpx;
}

.py-1 {
  padding-top: 8rpx;
  padding-bottom: 8rpx;
}

.py-2 {
  padding-top: 16rpx;
  padding-bottom: 16rpx;
}

.py-3 {
  padding-top: 24rpx;
  padding-bottom: 24rpx;
}

.py-6 {
  padding-top: 48rpx;
  padding-bottom: 48rpx;
}

.py-10 {
  padding-top: 80rpx;
  padding-bottom: 80rpx;
}

.pb-20 {
  padding-bottom: 160rpx;
}

.m-1 {
  margin: 8rpx;
}

.mb-1 {
  margin-bottom: 8rpx;
}

.mb-2 {
  margin-bottom: 16rpx;
}

.mb-3 {
  margin-bottom: 24rpx;
}

.mb-4 {
  margin-bottom: 32rpx;
}

.mb-6 {
  margin-bottom: 48rpx;
}

.mt-1 {
  margin-top: 8rpx;
}

.mt-2 {
  margin-top: 16rpx;
}

.mt-4 {
  margin-top: 32rpx;
}

.ml-2 {
  margin-left: 16rpx;
}

.ml-3 {
  margin-left: 24rpx;
}

.mr-1 {
  margin-right: 8rpx;
}

.mr-2 {
  margin-right: 16rpx;
}

.mr-3 {
  margin-right: 24rpx;
}

/* Typography */
.text-xxs {
  font-size: 20rpx;
}

.text-xs {
  font-size: 24rpx;
}

.text-sm {
  font-size: 28rpx;
}

.text-lg {
  font-size: 36rpx;
}

.text-center {
  text-align: center;
}

.font-medium {
  font-weight: 500;
}

.font-semibold {
  font-weight: 600;
}

.block {
  display: block;
}

/* Colors */
.text-white {
  color: #FFFFFF;
}

.text-primary {
  color: #111827;
}

.text-secondary {
  color: #6B7280;
}

.text-gray-400 {
  color: #9CA3AF;
}

.text-red-500 {
  color: #EF4444;
}

.text-green-500 {
  color: #10B981;
}

.text-blue-500 {
  color: #3B82F6;
}

.bg-transparent {
  background-color: transparent;
}

.bg-white {
  background-color: #FFFFFF;
}

.bg-primary {
  background-color: #3B82F6;
}

.bg-page {
  background-color: #F9FAFB;
}

.bg-blue-50 {
  background-color: #EFF6FF;
}

.bg-green-50 {
  background-color: #ECFDF5;
}

.bg-purple-50 {
  background-color: #F5F3FF;
}

.bg-yellow-50 {
  background-color: #FFFBEB;
}

.bg-red-50 {
  background-color: #FEF2F2;
}

.bg-indigo-50 {
  background-color: #EEF2FF;
}

/* Borders & Shadows */
.rounded-lg {
  border-radius: 16rpx;
}

.rounded-xl {
  border-radius: 24rpx;
}

.rounded-full {
  border-radius: 9999rpx;
}

.shadow-card {
  box-shadow: 0 8rpx 12rpx -2rpx rgba(0, 0, 0, 0.1), 0 4rpx 8rpx -2rpx rgba(0, 0, 0, 0.06);
}

.shadow-sm {
  box-shadow: 0 1rpx 2rpx 0 rgba(0, 0, 0, 0.05);
}

/* Layout patterns */
.space-y-2 > view + view {
  margin-top: 16rpx;
}

.space-y-3 > view + view {
  margin-top: 24rpx;
}

/* Opacity */
.opacity-40 {
  opacity: 0.4;
}

.opacity-50 {
  opacity: 0.5;
}

/* Fix for scrollbar */
::-webkit-scrollbar {
  display: none;
}

/* Special classes for py-0-5 padding */
.py-0-5 {
  padding-top: 4rpx;
  padding-bottom: 4rpx;
}

.px-1-5 {
  padding-left: 12rpx;
  padding-right: 12rpx;
}