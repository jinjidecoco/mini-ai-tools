/* Tab Bar Customizations */
.tab-bar-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.tab-bar-icon {
  width: 54rpx;
  height: 54rpx;
}

/* Grid Layout */
.grid {
  display: grid;
}

.grid-cols-4 {
  grid-template-columns: repeat(4, minmax(0, 1fr));
}

.gap-3 {
  gap: 12rpx;
}

/* Hide scrollbars but allow scrolling */
